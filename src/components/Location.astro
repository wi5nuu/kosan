            <rect x="380" y="340" width="160" height="110" rx="10" fill="#c8e6b8" opacity="0.38"/>
            <rect x="400" y="60" width="120" height="70" rx="8" fill="#c8e6b8" opacity="0.35"/>

            <!-- Roads (main) -->
            <rect x="0" y="140" width="560" height="24" rx="0" fill="url(#roadGrad)"/>
            <rect x="0" y="300" width="560" height="20" rx="0" fill="url(#roadGrad)" opacity="0.85"/>
            <rect x="180" y="0" width="22" height="480" fill="url(#roadGrad)" opacity="0.7"/>
            <rect x="400" y="0" width="18" height="480" fill="url(#roadGrad)" opacity="0.6"/>

