            <rect x="60" y="0" width="14" height="140" fill="#e0d6cc" opacity="0.5"/>
            <rect x="300" y="320" width="100" height="12" fill="#e0d6cc" opacity="0.45"/>

            <!-- Buildings (small blocks) -->
            <rect x="30" y="165" width="70" height="50" rx="4" fill="#e6ddd2" opacity="0.55"/>
            <rect x="115" y="165" width="55" height="50" rx="4" fill="#e6ddd2" opacity="0.5"/>
            <rect x="220" y="165" width="80" height="50" rx="4" fill="#e6ddd2" opacity="0.5"/>
            <rect x="320" y="165" width="65" height="50" rx="4" fill="#e6ddd2" opacity="0.5"/>
            <rect x="420" y="165" width="100" height="50" rx="4" fill="#e6ddd2" opacity="0.45"/>

            <rect x="30" y="240" width="60" height="45" rx="4" fill="#e6ddd2" opacity="0.5"/>
            <rect x="220" y="240" width="50" height="45" rx="4" fill="#e6ddd2" opacity="0.48"/>
            <rect x="420" y="240" width="90" height="45" rx="4" fill="#e6ddd2" opacity="0.45"/>

            <rect x="30" y="325" width="130" height="55" rx="4" fill="#e6ddd2" opacity="0.5"/>
