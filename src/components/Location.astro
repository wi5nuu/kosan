              <circle cx="250" cy="195" r="5" fill="#fff"/>
              <polygon points="250,208 244,198 256,198" fill="var(--orange)"/>
            </g>

            <!-- Label for Al'ashar -->
            <rect x="192" y="260" width="116" height="28" rx="14" fill="#fff" opacity="0.92" filter="url(#shadow)"/>
            <text x="250" y="279" text-anchor="middle" font-family="DM Sans, sans-serif" font-size="11" font-weight="700" fill="var(--orange-dark)">Al'ashar Kos</text>

            <!-- Nearby labels (small subtle) -->
            <text x="85" y="78" text-anchor="middle" font-family="DM Sans, sans-serif" font-size="9.5" fill="#8a7e72" opacity="0.7">Taman</text>
            <text x="460" y="96" text-anchor="middle" font-family="DM Sans, sans-serif" font-size="9.5" fill="#8a7e72" opacity="0.7">Kampus</text>
            <text x="460" y="400" text-anchor="middle" font-family="DM Sans, sans-serif" font-size="9.5" fill="#8a7e72" opacity="0.7">Pusat Belanja</text>
            <text x="100" y="230" text-anchor="middle" font-family="DM Sans, sans-serif" font-size="9" fill="#8a7e72" opacity="0.6">Halte</text>

            <!-- Compass rose hint -->
            <g opacity="0.4" transform="translate(510,430)">
              <line x1="0" y1="-18" x2="0" y2="18" stroke="#b0a090" stroke-width="1.2"/>
              <line x1="-18" y1="0" x2="18" y2="0" stroke="#b0a090" stroke-width="1.2"/>
              <polygon points="0,-18 -4,-8 4,-8" fill="#b0a090"/>
              <text x="0" y="-22" text-anchor="middle" font-family="DM Sans, sans-serif" font-size="8" fill="#8a7e72">N</text>
            </g>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .location { padding: 120px 0; }

  .location-inner {
    display: grid;
    grid-template-columns: 1fr 1.1fr;
    gap: 72px;
    align-items: center;
  }

  .location-desc {
    font-size: 16px;
    color: var(--text-secondary);
    line-height: 1.8;
    margin-bottom: 36px;
  }

  /* Landmarks list */
  .landmarks {
    display: flex;
    flex-direction: column;
    gap: 16px;
    margin-bottom: 40px;
  }
  .landmark-item {
    display: flex;
    align-items: center;
    gap: 16px;
  }
  .landmark-dot {
    width: 8px;
    height: 8px;
    min-width: 8px;
    background: var(--orange);
    border-radius: 50%;
  }
  .landmark-info h4 {
    font-family: 'DM Sans', sans-serif;
    font-size: 14px;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1px;
  }
  .landmark-info p {
    font-size: 12.5px;
    color: var(--text-muted);
  }

  /* Map */
  .location-map {
    position: relative;
  }
  .map-container {
    border-radius: 20px;
    overflow: hidden;
    box-shadow: var(--shadow-md);
    border: 1px solid var(--border);
  }
  .map-svg {
    width: 100%;
    height: auto;
    display: block;
  }

  @media (max-width: 900px) {
    .location-inner {
      grid-template-columns: 1fr;
      gap: 48px;
    }
    .location-map { order: -1; max-width: 500px; }
  }
  @media (max-width: 560px) {
    .location { padding: 80px 0; }
  }
</style>
